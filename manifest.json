{
	"manifest_version": 2,

	"name": "JobJob",
	"description": "A simple page-scraping extension for Chrome",
	"version": "1.0",
	"author": "Andre",

	"background": {
		"scripts": ["popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage"
    ],
	"browser_action": {
		"default_icon": "job-logo.png",
		"default_popup": "popup.html"
	}
}
